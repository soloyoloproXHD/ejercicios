{
  "kind": "collectionType",
  "collectionName": "platos",
  "info": {
    "singularName": "plato",
    "pluralName": "platos",
    "displayName": "Platos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "foto": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "nombre": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "required": true
    },
    "precio": {
      "type": "decimal",
      "required": true,
      "default": 0,
      "min": 0,
      "max": 9999999
    },
    "Alergenos": {
      "type": "component",
      "component": "comida.alergenos",
      "repeatable": true
    },
    "tipo": {
      "type": "enumeration",
      "required": true,
      "default": "Primero",
      "enum": [
        "Primero",
        "Segundo",
        "Postre"
      ]
    },
    "menus_diarios": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::menu-diario.menu-diario",
      "inversedBy": "primero"
    },
    "ventas": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::venta.venta",
      "inversedBy": "platos"
    },
    "tido_de_postre": {
      "type": "enumeration",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "tipo"
            },
            "Postre"
          ]
        }
      },
      "required": true,
      "default": "Azúcar.",
      "enum": [
        "Azúcar.",
        "Sin azúcar."
      ]
    }
  }
}
